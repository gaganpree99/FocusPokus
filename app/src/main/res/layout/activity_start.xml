<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/backrepeat">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/focus" />

        <TextView
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/grinchedregular"
            android:text="focuspokus"
            android:textColor="@android:color/background_light"
            android:textSize="80dp" />
    </LinearLayout>

    <Button
        android:id="@+id/playButton"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/playbutton"
        android:fontFamily="@font/spring"
        android:onClick="play"
        android:text="Let's Play!"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/settingbutton"
        android:fontFamily="@font/spring"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect" />

    <Button
        android:id="@+id/topScore"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/topscores"
        android:fontFamily="@font/spring"
        android:onClick="exit"
        android:text="Top Scores"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect" />
    <Button
        android:id="@+id/quitButton"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/quitbutton"
        android:fontFamily="@font/spring"
        android:onClick="exit"
        android:text="Quit Game"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect" />

</RelativeLayout>